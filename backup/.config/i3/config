#koristim rofi(umesto dmenu), mislim(nisam sig) da je on X11 specific, tojest ne moze na wayland, ako si na wayland istrazi
#koristim compton, za transparacy rofi-ja
#koristim polybar
set $mod Mod4
set $alt Mod1

#font pango:monospace 8
#font pango:DejaVu Sans Mono 8
font pango:System San Francisco Display 8 

set $innerDefault 3
set $outerDefault 0
gaps inner $innerDefault 
gaps outer $outerDefault

#wallpaper i window borderi
for_window [class="^.*"] border pixel 2
exec_always feh --bg-scale ~/Pictures/wallpaper/wallpaper 

bindsym $mod+Return exec alacritty

bindsym $mod+Shift+q kill
bindsym $alt+F4 kill

bindsym $mod+w exec firefox
bindsym $mod+t split toggle

#Polybar launch
exec_always --no-startup-id ~/.config/polybar/scripts/launch.sh

#dodatak 2------------------------------------------
bindsym $mod+Shift+space floating toggle
#ne znam sta ovo radi
bindsym $mod+space mode_toggle

#ne znam sta ovo radi
bindsym $mod+Escape workspace prev

#ne znam sta ovo radi
bindsym $mod+p exec --no-startup-id winresize

#ne znam sta ovo radi
bindsym $mod+$alt+o sticky toggle

#TODO: namesti da ovo radi, izmeni celu komandu ako treba
bindsym $mod+a exec --no-startup-id ddspawn dropdowncalc -f mono:pixelsize=24

#ne znam sta ovo radi
bindsym $mod+g workspace prev

#premesti sve contain-ere u workspace-u u drugi workspace
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+f fullscreen toggle

