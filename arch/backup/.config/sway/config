# Fix for GTK+ application taking 20 seconds to start (namely, waybar) (https://github.com/swaywm/sway/wiki)
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

#mozda da dodamo ovo sto oni stavljaju "--no-startup-id" na krsa stvari, pogledaj na netu sta to radi
set $mod Mod4
set $alt Mod1
set $terminal alacritty
set $browser brave
set $file_browser pcmanfm
font pango:System San Francisco Display 8

