#bindsym $mod+Shift+Delte exec $truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e ranger
# Disables all sound, moves to a new workspace and opens innocent looking programs
bindsym $mod+Shift+Delete workspace $wslmao ; exec --no-startup-id $term -e htop ; exec --no-startup-id $file_browser
